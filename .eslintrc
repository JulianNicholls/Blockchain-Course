{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": [1, "single"],
    "semi": ["error", "always"],
    "no-console": [
      "error",
      {
        "allow": ["log", "warn", "error"]
      }
    ]
  }
}
